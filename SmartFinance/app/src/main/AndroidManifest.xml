<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.hiroaki.smartfinance">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.InputJobActivity"
            android:label="@string/title_activity_input_job"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.InputDebtActivity"
            android:label="@string/title_activity_input_debt"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.InputAssetActivity"
            android:label="@string/title_activity_input_asset"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.ExpensiveActivity"
            android:label="@string/title_activity_expensive"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.ResultActivity"
            android:label="@string/title_activity_result"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>